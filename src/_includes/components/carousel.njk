<div class="carousel">
    <button id="prevButton">Previous</button>
    <div class="images">
        {% for img, alt in images %}
            <img class="carousel-img" src="{{ img }}" alt="{{ alt }}" id="img{{loop.index0}}">
            {% endfor %}
        </div>
        <button id="nextButton">Next</button>
    </div>
    <div
        class="progress-bar"><!-- Progress bar dots will be generated by JavaScript -->
    </div>
    <script src="{{'/scripts/carousel.js' | url | safe}}"></script>