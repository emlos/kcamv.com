<div class="carousel">
    <button id="prevButton">◀</button>
    <div class="images">
        {% for image in collections[tag] %}
        
            <img class="carousel-img" src="{{ image.source}}" alt="{{ image.title }}" id="img{{ loop.index0 }}">
            {% endfor %}
        </div>
        <button id="nextButton">▶</button>
    </div>
    <div class="progress-bar"></div>
    <script src="{{ '/scripts/carousel.js' | url | safe }}"></script>