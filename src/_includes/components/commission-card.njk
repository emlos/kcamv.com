<article class="commission-card">
    <a href="{{ type.url }}">
        <h1>{{ type.data.title }}</h1>
    </a>
    <hr>
        {% set output = ["commission/",type.data.tag,"/thumbs/"] | join %}
        {% EleventyImage collections[type.data.tag][0].source, collections[type.data.tag][0].title, "(min-width: 30em) 50vw, 100vw", output %}
        <table class="prices">
            {% for category, price in prices %}
                <tr class="price">
                    <td>{{ category }}:</td>
                    <td>{{ price }}&euro;
                    </td>
                </tr>
            {% endfor %}
        </table>
    </article>